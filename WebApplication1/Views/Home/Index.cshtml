@model List<MyBlogMvc.Models.News>

@{
    ViewData["Title"] = "Мой Блог";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        .light-theme {
            background-color: #f0f0f0;
            color: #333;
        }

        .dark-theme {
            background-color: #333;
            color: #f0f0f0;
        }

        .news-item {
            border: 1px solid #ccc;
            padding: 15px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body class="@(Context.Request.Cookies["theme"] == "dark" ? "dark-theme" : "light-theme")">

    <div class="blog-container">
        <h1>Мой личный блог</h1>
        <a href="@Url.Action("Settings", "Blog")">Настройки чтения</a>
        <hr />

        @foreach (var newsItem in Model)
        {
            <div class="news-item">
                <h2>@newsItem.Title</h2>
                <p>@newsItem.Content</p>
                <span class="date">Опубликовано: @newsItem.PublicationDate.ToShortDateString()</span>
            </div>
        }
    </div>

</body>
</html>